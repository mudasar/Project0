<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTextStyle">

    </style>
    <style name="AppTitleStyle" parent="AppTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/darkblack</item>
    </style>
    <style name="AppButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@color/app_button_background</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>-->
    </style>
    <style name="CapstoneButton" parent="AppButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/capstone_button_background</item>
    </style>
</resources>
